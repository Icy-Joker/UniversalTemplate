{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "RelWithDebInfoBase",
      "description": "Build for RelWithDebInfo base configuration",
      "hidden": true,
      "binaryDir": "${sourceParentDir}/build/relwithdebinfo",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "DebugBase",
      "description": "Build for Debug base configuration",
      "hidden": true,
      "binaryDir": "${sourceParentDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ReleaseBase",
      "description": "Build for Release base configuration",
      "hidden": true,
      "binaryDir": "${sourceParentDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
